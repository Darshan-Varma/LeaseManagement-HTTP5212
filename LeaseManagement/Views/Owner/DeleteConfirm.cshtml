@model LeaseManagement.Models.OwnerDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this Owner?</h2>
<a href="/Owner/List">Cancel</a>
<h3>Name: @Model.OwnerName</h3>
<p>Owner Description: @Model.OwnerDescription</p>
<form action="/Owner/Delete/@Model.OwnerId" method="POST">
    <input type="submit" value="Confirm Delete" />
</form>
